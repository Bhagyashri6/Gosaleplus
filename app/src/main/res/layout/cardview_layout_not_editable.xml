<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
android:alpha="0.7"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewrr"

            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mapp"
                android:id="@+id/pjpimage"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pjpimage"
                android:text="Distributor Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:id="@+id/distributorName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/distributorName"
                android:layout_toRightOf="@id/pjpimage"
                android:text="Address"
                android:textSize="18dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/address"
                />
            <ImageView
                android:id="@+id/call"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_below="@id/address"
                android:src="@drawable/phone"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/pjpimage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_toRightOf="@id/call"
                android:text="Contact"
                android:textSize="15dp"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/contact"
                />




        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>