<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       tools:context="com.chandrakant.abc.crm_app.MainActivity3">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:weightSum="2">

         <LinearLayout
             android:layout_weight="0.1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center"
             android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/gosalespic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/go_salesplus"
                />

         </LinearLayout>


         <LinearLayout
             android:layout_margin="2dp"
             android:orientation="vertical"
             android:weightSum="2"
             android:layout_width="match_parent"
             android:layout_weight="1.9"
             android:layout_height="wrap_content"
             android:background="#fdffffff">
            <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/newpjp"
                   android:clickable="true"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <LinearLayout
                      android:weightSum="1"
                      android:orientation="vertical"
                      android:background="@drawable/border_to_textview"
                      android:layout_margin="5dp"

                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                     <ImageView
                         android:src="@drawable/mapp"
                         android:layout_weight="0.9"
                         android:scaleType="fitXY"
                         android:layout_width="match_parent"
                         android:layout_height="15dp" />
                     <TextView
                         android:layout_marginLeft="10dp"
                         android:gravity="center_vertical"
                         style="@style/Base.TextAppearance.AppCompat.Title"
                         android:text="Journey Plan"
                         android:textSize="14dp"
                         android:typeface="serif"

                         android:layout_weight="0.1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                  </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:id="@+id/newoutlet"
                      android:clickable="true"
                      android:weightSum="1"
                      android:orientation="vertical"
                      android:background="@drawable/border_to_textview"
                      android:layout_margin="5dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                     <ImageView
                         android:padding="1dp"
                         android:src="@drawable/onlineretail"
                         android:layout_weight="0.9"
                         android:scaleType="fitXY"
                         android:layout_width="match_parent"
                         android:layout_height="15dp" />

                     <TextView
                         android:textSize="14dp"
                         android:typeface="serif"
                         android:layout_marginLeft="10dp"
                         android:gravity="center_vertical"
                         style="@style/Base.TextAppearance.AppCompat.Title"
                         android:text="Outlet"
                         android:layout_weight="0.1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                  </LinearLayout>
               </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:clickable="true"
                      android:id="@+id/newprofile"
                      android:weightSum="1"
                      android:orientation="vertical"
                      android:background="@drawable/border_to_textview"
                      android:layout_margin="5dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                     <!--  <ImageView

                           android:src="@drawable/profilee"
                           android:layout_weight="0.9"
                           android:scaleType="fitXY"
                           android:layout_width="match_parent"
                           android:layout_height="15dp"
                           android:id="@+id/imageView" />-->
                     <ImageView
                         android:padding="1dp"
                         android:src="@drawable/navigation"
                         android:layout_weight="0.9"
                         android:scaleType="fitXY"
                         android:layout_width="match_parent"
                         android:layout_height="15dp" />
                     <TextView

                         android:textSize="14dp"
                         android:typeface="serif"
                         android:layout_marginLeft="10dp"
                         android:gravity="center_vertical"
                         style="@style/Base.TextAppearance.AppCompat.Title"
                         android:text="Get Navigation"
                         android:layout_weight="0.1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                  </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:clickable="true"
                      android:id="@+id/newperformance"
                      android:weightSum="1"
                      android:orientation="vertical"
                      android:background="@drawable/border_to_textview"
                      android:layout_margin="5dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                     <ImageView
                         android:padding="1dp"
                         android:src="@drawable/perfmce"
                         android:layout_weight="0.9"
                         android:scaleType="fitXY"
                         android:layout_width="match_parent"
                         android:layout_height="15dp" />
                     <TextView
                         android:textSize="14dp"
                         android:typeface="serif"
                         android:layout_marginLeft="10dp"
                         android:gravity="center_vertical"
                         style="@style/Base.TextAppearance.AppCompat.Title"
                         android:text="Performance"
                         android:layout_weight="0.1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                  </LinearLayout>
               </LinearLayout>



            </LinearLayout>

         </LinearLayout>
         <TextView
             android:textStyle="bold"
             android:textColor="#fff"
             android:layout_centerHorizontal="true"
             android:textSize="11sp"

             android:background="@color/colorPrimary"
             android:text="Powered By ATM- +91 982 100 80 90"
             android:layout_width="match_parent"
             android:layout_height="20dp"
             android:gravity="center"
             android:layout_alignParentBottom="true"/>
      </LinearLayout>

   </RelativeLayout>
</RelativeLayout>
